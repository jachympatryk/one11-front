{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",  // Zmieniono z 'bundler' na 'Node', które jest bardziej typowe dla projektów Node.js i Vite/webpack
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,  // Zapewnia, że TypeScript tylko sprawdza błędy, ale nie emituje plików JS, co jest odpowiednie jeśli Vite obsługuje budowanie projektu.
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,  // Zmniejszenie rygorystyczności sprawdzania typów, co może pomóc uniknąć niektórych błędów podczas budowania
    "noImplicitAny": false,  // Pozwala na zmienne bez jawnie określonych typów
    "strictNullChecks": false,  // Wyłącza ścisłe sprawdzanie null i undefined
    "strictFunctionTypes": false,  // Wyłącza ścisłe sprawdzanie typów funkcji
    "strictBindCallApply": false,  // Wyłącza ścisłe typy dla bind, call i apply
    "strictPropertyInitialization": false,  // Wyłącza ścisłe sprawdzanie inicjalizacji właściwości w klasach
    "noUnusedLocals": false,  // Nie zgłasza błędów dla nieużywanych lokalnych zmiennych
    "noUnusedParameters": false,  // Nie zgłasza błędów dla nieużywanych parametrów funkcji
    "noFallthroughCasesInSwitch": true  // Zapobiega przypadkom przeoczenia 'break' w instrukcji switch
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

